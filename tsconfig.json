{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": false,
    "allowJs": false,
    "rootDir": "./src",
    "baseUrl": "./",
    "outDir": "./dist",
    "lib": [
      "es2017"
    ]
  },
  "include": [
    "*.ts",
    "**/*.ts"
  ],
  "exclude": [
    "./index.ts",
    "./index.d.ts",
    "node_modules",
    "./**/*.spec.ts",
    "examples",
    "__tests__"
  ],
  "lib": [
    "es2018",
    "DOM"
  ]
}
